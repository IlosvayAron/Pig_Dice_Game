<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pig.controller.WinnersController">
   <VBox alignment="CENTER" prefHeight="463.0" prefWidth="500.0">
        <Label alignment="CENTER" text="Winners">
           <font>
              <Font size="22.0" />
           </font>
           <padding>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
           </padding>
        <VBox.margin>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
        </Label>
        <TableView fx:id="tableview" prefHeight="400.0" prefWidth="200.0">
          <columns>
            <TableColumn fx:id="winner" prefWidth="250.0" text="Winner" />
            <TableColumn fx:id="winner_score" prefWidth="250.0" text="Score" />
          </columns>
        </TableView>
        <HBox alignment="CENTER">
           <!--<children>-->
              <Button layoutX="220.0" layoutY="100.0" mnemonicParsing="false" onAction="#switchScene" prefWidth="100.0" text="Restart">
                 <font>
                    <Font size="18.0" />
                 </font>
                 <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </HBox.margin>
              </Button>
              <Button mnemonicParsing="false" onAction="#handleExit" prefWidth="100.0" text="Exit">
                 <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </HBox.margin>
                 <font>
                    <Font size="18.0" />
                 </font>
              </Button>
           <!--</children>-->
        </HBox>
   </VBox>
   <!--</children>-->
</Pane>
